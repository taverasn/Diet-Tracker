<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
        <form action="/diets/<%= dietId %>?_method=PUT" method="POST">
            <div>
                <input type="text" name="name" value="<%= diet.name %>">
                <label>Diet Name</label>
            </div>
            <div>
                <select name="dietType">
                    <option value="Fasting">Fasting</option>
                    <option value="Bulking">Bulking</option>
                    <option value="Vegan">Vegan</option>
                    <option value="Low-Carb">Low-Carb</option>
                    <option value="Vegetarian">Vegetarian</option>
                </select>
                <label>Select Diet Type</label>
            </div>
            <div>
                <input class="datepicker" type="text" name="startDate">
                <label>Set Start Date</label>
            </div>
            <input type="submit" value="Edit Diet">
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>